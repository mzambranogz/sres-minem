@using sres.ut


@{
    ViewBag.Titulo = "Mantenimiento Criterio";
}

@section scripts_footer{
<script src="@Url.Content("~/Assets/js/plugins/alert.js")"></script>
    <script src="@Url.Content("~/Assets/js/pages/mantenimiento_criterio.js")"></script>
}

<div>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12 px-0">
                <input type="text" class="form-control" id="textoBusqueda" name="textoBusqueda" />
                <button id="btnConsultar">CONSULTAR</button>
                <button id="btnNuevo">NUEVO</button>
            </div>
        </div>
        <div class="row">
            <div class="col-12 px-0">
                <div class="table-responsive tabla-principal">
                    <table id="tblCriterio" class="table table-hover">
                        <thead>
                            <tr class="bg-primary text-white">
                                <th class="text-center" scope="col"><span class="miColumna">N°&nbsp;<i class="fas fa-sort" id="ID_USUARIO"></i></span></th>
                                <th scope="col"><span class="miColumna">Criterio&nbsp;<i class="fas fa-sort-up" id="NOMBRE"></i></span></th>
                                <th class="text-center" scope="col" width="10%">Opciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<form id="frm" autocomplete="off" style="display: none;">
    <div>
        <label>
            Criterio:
            <input type="text" name="txtCriterio" id="txtCriterio" placeholder="Ingrese Criterio" />
        </label>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="form-group">
                <label class="estilo-01 text-limit-1 text-left" for="fle-criterio">Imagen requerido<span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="top" title="Seleccione un archivo para adjuntarlo en el registro de requisitose, se recomienda un archivo del tipo (JPG, PNG)"></i></span></label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-file"></i></span></div>
                    <input class="form-control form-control-sm cursor-pointer txt-file-control" type="text" id="txt-criterio" placeholder="Subir documentos" required>
                    <input class="d-none fil-file-control" type="file" id="fle-criterio" accept="image/*">
                    <div class="input-group-append">
                        <label class="input-group-text cursor-pointer estilo-01" for="fle-criterio"><i class="fas fa-upload mr-1"></i>Subir archivo</label>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="col-lg-6 col-md-12 col-sm-12">
            <div class="form-group">
                <label class="estilo-01">&nbsp;</label>
                <div class="alert alert-danger p-1 d-flex">
                    <div class="mr-lg-auto"><i class="fas fa-times-circle px-2 py-1"></i><span class="estilo-01">Error vuelva a intentarlo nuevamente</span></div>
                </div>
            </div>
        </div>*@
    </div>

    <div>
        <button type="button" id="btnGuardar">GUARDAR</button>
        <button type="button" id="btnCerrar">CERRAR</button>
    </div>
    <div class="alert-add">

    </div>
</form>



<script>
    const maxBytes = @(AppSettings.Get<long>("File.MaxBytes"));
</script>