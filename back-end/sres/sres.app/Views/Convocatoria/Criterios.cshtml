    List<CriterioBE> listaCriterio = (List<CriterioBE>)ViewData["listaCriterio"];
    ConvocatoriaEtapaInscripcionBE convetainsc = (ConvocatoriaEtapaInscripcionBE)ViewData["convetainsc"];
    MigrarEmisionesBE migrar = (MigrarEmisionesBE)ViewData["migrar"];
    PuntajeBE puntaje_conv = (PuntajeBE)ViewData["puntaje"];
    decimal total_criterio = listaCriterio.Count();
    decimal ingresados = 0, emisiones = 0, energia = 0, combustible = 0;
    int puntaje = 0;
    foreach (var cri in listaCriterio) { if (cri.INGRESO_DATOS > 0) { ingresados++; } puntaje += cri.PUNTAJE; emisiones += cri.EMISIONES; energia += cri.ENERGIA; combustible += cri.COMBUSTIBLE; }
    decimal porcentaje_avance = Decimal.Round(ingresados * 100 / total_criterio);
    string pathFormat = AppSettings.Get<string>("Path.Criterio");
    string criteriosdescripcion = AppSettings.Get<string>("Criterios.Descripcion");
    string pathFormat_mt = AppSettings.Get<string>("Path.MedidaMitigacion");
    string pathFormat_reg_mrv = AppSettings.Get<string>("Registro.MRV");
    string pathFormat_ini_mrv = AppSettings.Get<string>("Inicio.MRV");
    int puntaje_posible = puntaje_conv == null ? 0 : puntaje_conv.PUNTAJE;
}

