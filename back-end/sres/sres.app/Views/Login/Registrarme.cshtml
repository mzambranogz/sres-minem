
@{
    ViewBag.Titulo = "Registarme";
    ViewBag.Header = new Dictionary<string, object>
    {
        ["Imagen"] = "~/Assets//images/bg-registro.png",
        ["Titulo"] = "REGISTRARSE"
    };
